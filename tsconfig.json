{
  "compilerOptions": {
    "lib": ["ES6", "DOM"],
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "noEmitOnError": false,
    "baseUrl": "./src",
    "paths": {
      "api/*": ["api/*"],
      "modules/*": ["modules/*"],
      "utils/*": ["utils/*"]
    }
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}
