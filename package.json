{
  "name": "functions",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "clean": "rimraf lib",
    "build": "run-s build:source build:paths",
    "build:source": "yarn clean && tsc -p tsconfig.build.json",
    "build:paths": "tscpaths -p tsconfig.build.json -s ./src -o ./lib",
    "functions": "firebase emulators:start --only functions",
    "serve": "yarn prebuild:puppeteer-extra && GOOGLE_APPLICATION_CREDENTIALS=./service-account.secrets.json tsc-watch --noClear -p tsconfig.build.json --onFirstSuccess 'run-s build:paths functions' --onCompilationComplete 'yarn build:paths'",
    "serve:dev": "NODE_ENV=development yarn serve",
    "serve:production": "NODE_ENV=production yarn serve",
    "shell": "yarn run build && firebase functions:shell",
    "start": "yarn run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "jest",
    "prebuild:puppeteer-extra": "npx hygen puppeteer-extra workaround"
  },
  "engines": {
    "node": "^18 || ^20"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@octokit/rest": "18.11.4",
    "date-fns": "2.23.0",
    "date-fns-tz": "1.1.6",
    "dayjs": "1.11.10",
    "firebase-admin": "9.11.1",
    "firebase-functions": "3.15.5",
    "googleapis": "80.1.0",
    "node-fetch": "2.6.1",
    "puppeteer": "10.1.0",
    "puppeteer-extra": "3.1.18",
    "puppeteer-extra-plugin-stealth": "2.7.8"
  },
  "devDependencies": {
    "@babel/core": "7.14.6",
    "@babel/preset-env": "7.14.7",
    "@babel/preset-typescript": "7.14.5",
    "@octokit/types": "6.31.3",
    "@types/jest": "26.0.23",
    "@types/node-fetch": "2.5.12",
    "@typescript-eslint/eslint-plugin": "4.28.1",
    "@typescript-eslint/parser": "4.28.1",
    "babel-jest": "27.0.6",
    "eslint": "7.30.0",
    "eslint-config-google": "0.14.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-import-resolver-typescript": "2.4.0",
    "eslint-plugin-import": "2.23.4",
    "firebase-functions-test": "0.3.0",
    "jest": "27.0.6",
    "npm-run-all": "4.1.5",
    "prettier": "2.3.2",
    "rimraf": "3.0.2",
    "tsc-watch": "4.4.0",
    "tscpaths": "0.0.9",
    "typescript": "4.3.5"
  },
  "private": true
}
